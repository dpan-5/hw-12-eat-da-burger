<div class="wrapper">
<h1>Eat da Burger</h1>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit" id="submit-btn">Add Burger</button>
</form>

<div class="burger-div">
<h2>Burgers that are not eaten!</h2>

<ul>
  {{#each cats}}
    {{#unless eaten}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="burger-div">
<h2>Burgers that have been eaten!</h2>

<ul>
  {{#each cats}}
    {{#if eaten}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
